<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d32"
    android:padding="@dimen/d4"
    >

    <TextView
        android:id="@+id/tv_menu_equip"
        style="@style/style_equip_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/set_equip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_menu_jewelry"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_menu_jewelry"
        style="@style/style_equip_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/set_equip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_menu_equip"
        app:layout_constraintRight_toLeftOf="@+id/tv_menu_skill"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_menu_skill"
        style="@style/style_equip_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/set_equip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_menu_jewelry"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>