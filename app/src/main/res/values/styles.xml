<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeFullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="style_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:padding">@dimen/d4</item>
    </style>

    <style name="style_equip_item">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp10</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/select_button</item>
        <item name="android:padding">@dimen/d4</item>
    </style>

    <style name="style_item_skill_value">
        <item name="android:layout_width">@dimen/d24</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
